@model IEnumerable<Proyecto_Ajedrez_v_1.Models.producto>

@{
    ViewBag.Title = "Listado de Producto";
    var cat = (SelectList)ViewBag.cate;

}

<br />
<br />
<br />
<br />

@using (Html.BeginForm())
{
    <strong> Categorías </strong>
    @Html.DropDownList("id",cat, new { @class = "btn btn-default" }) 
    @*id hace referencia a el id de la categoria que es nombrado en el controlador*@
    <input type="submit" class="btn btn-primary" value="Buscar"/>


}




<p>
    
    <h2>Productos</h2>
     @* @Html.ActionLink("Create New", "Create")  *@
</p>
<div class="container">

    <div class="row">


        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="panel panel-info">
                    <div class="panel-heading">@item.nombre</div>
                    <div class="panel-body">

                        <img class="img-responsive" style="width:300px; height:300px;" src="@item.image" />
                       
                        <p>@item.descripcion</p> 
                        <h3> S/ @item.precio</h3>
                       

                        
                        
          @Html.ActionLink("Agregar a carrito", "AgregarCarrito", new { id = item.idproducto}, new { @class = "btn btn-primary btn-sm" })
            
          @Html.ActionLink("Ver Detalle", "AgregarCarritoDetalle", new { id = item.idproducto }, new { @class = "btn btn-info btn-sm" })              
                    </div>
                </div>
            </div>
        }
    </div>
</div>












