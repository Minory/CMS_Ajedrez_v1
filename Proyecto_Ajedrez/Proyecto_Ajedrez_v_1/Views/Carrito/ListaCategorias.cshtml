@model IEnumerable<Proyecto_Ajedrez_v_1.Models.categoria>

@{
    ViewBag.Title = "ListaCategorias";
}


<br />
<br />
<h2>ListaCategorias</h2>

<p>
    @Html.ActionLink("Agregar Categoria", "CreateCategoria",null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditCategoria", new { id = item.id_categoria }) |
            @Html.ActionLink("Detalle", "DetailsCategoria", new {  id=item.id_categoria }) |
            @Html.ActionLink("Eliminar", "DeleteCategoria", new { id = item.id_categoria })
        </td>
    </tr>
}

</table>
